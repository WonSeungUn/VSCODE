			<label for="password">비밀번호</label>
			<input type="password" id="password">
			<label for="email">이메일</label>
			<input type="email" id="email" placeholder="aaa@aaa.com 형식으로 입력해주세요">
			<label for="tel">연락처</label>
			<input type="tel" placeholder="000-0000-0000 형식으로 입력해주세요">			
			<label for="date">생년월일</label>
			<input type="date">			
			<label for="textarea">자세한 사항</label>
			<textarea id="textarea"></textarea>
		</form>
