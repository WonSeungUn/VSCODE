			case "3":
				while (true) {
					Iterator<Product> bIter = products.iterator();
					List<Product> beauty = new ArrayList<Product>();
					while (bIter.hasNext()) {
						Product b = bIter.next();
						if (b.getCategory().getCategoryName().equals("뷰티")) {
							beauty.add(b);
							System.out.println(b.getProductName() + "의 상품번호 : " + beauty.indexOf(b));
