	public static void prinfFile(File f) {
		if(f.isDirectory()) {
			//여기서 for문 돌면서 printFile 호츌
			System.out.println("디렉:"+f.getName());
			for(File f1 : f.listFiles()) {
				prinfFile(f1);
			}
		}else {
			System.out.println("파일:"+f.getName());
		}
	}
}
